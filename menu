#include <stdio.h> //importation de la bibliothèque

int main()
{
    int choix; //déclaration des variables
    do
    {    //affichage du menu
        printf("\n=== Menu Principal ===\n");
        printf("1. Charger un reseau\n");
        printf("2. Afficher le reseau\n");
        printf("3. Quitter\n");
        printf("Entrez votre choix : ");
        scanf("%d", &choix);

        switch (choix) //pour choisir l'action
        {
            case 1:
                break;
            case 2:
                break;
            case 3:
                printf("Au revoir !\n");
                break;
            default: //blindage pour le menu. 
                printf("Erreur, votre choix est invalide. Veuillez tapez une option valide.\n");
        }
    } while (choix!=3); //pour quitter 

    return 0;
}

